{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Environment setup & latest features
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleDetection": "force",

    // Bundler mode
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true
  }
}
